  padding-bottom: 10rpx;

}
.ac_text{
  padding-left: 5rpx;
  height: 90rpx;
  float: left;
  font-size: 15px;

}

.ac_icon{
  padding-right: 5rpx;

  float:  right;
  height: 60rpx;
  width: 60rpx;
}
.ac_icon image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 auto;
  align-content: center;
}

.ac_detail{ 
  margin: 0 25rpx;
